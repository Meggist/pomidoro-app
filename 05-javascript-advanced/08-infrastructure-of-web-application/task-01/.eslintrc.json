{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "space-before-blocks": ["error", "always"],
    "no-var": "error",
    "max-len": ["error", { "code": 60 }]
  }
}