<main class="main">
    <div class="settings-tabs">
        <div class="settings__right-side">
            <button class="settings__pomodoros tabs">Pomodoros</button>
            <div class="tabs__edge"></div>
            <button class="settings__Categories tabs">Categories</button>
        </div>
    </div>
    <section class="settings__page--pomodoros hidden">
    <div class="settings__title"><span class="settings-title__text">Pomodoros settings</span></div>
        <div class="settings__categories-list">
            <ul class="settings-pomodoros__list">
            </ul>
        </div>
        <div class="settings-pomodoros__cycle">
            <span class="cycle__title">Your cycle</span>
            <div class="cycle__img">
                <div class="cycle__first-row"></div>
                <div class="cycle__second-row"></div>
                <div class="cycle__third-row"></div>
            </div>
        </div>
        <div class="settings-pomodoros__buttons">
            <button class="settings__goToTasks">Go to tasks</button>
            <button class="settings-pomodoros__save">Save</button>
        </div>
    </section>

    <section class="settings__page--categories hidden">
        <div class="settings__title"><span class="settings-title__text">Categories list overview</span></div>
        <div class="settings__categories-list">
            <ul class="settings__list">
                <li class="settings__element">
                    <div class="settings__point work"></div>
                    <span class="settings__name">Work</span>
                </li>
                <li class="settings__element">
                    <div class="settings__point education"></div>
                    <span class="settings__name">Education</span>
                </li>
                <li class="settings__element">
                    <div class="settings__point hobby"></div>
                    <span class="settings__name">Hobby</span>
                </li>
                <li class="settings__element">
                    <div class="settings__point sport"></div>
                    <span class="settings__name">Sport</span>
                </li>
                <li class="settings__element">
                    <div class="settings__point other"></div>
                    <span class="settings__name">Other</span>
                </li>
            </ul>
        </div>
        <div class="settings__buttons">
            <button class="settings__goToTasks">Go to tasks</button>
        </div>
    </section>
</main>